            <appender-ref ref="ASYNC_TEST_FILE"/>
        </logger>
    </springProfile>

    <springProfile name="prod">
        <logger name="ru.tinkoff.piapi" level="WARN" additivity="false">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC_PROD_FILE"/>
        </logger>
    </springProfile>

    <springProfile name="!test,!prod">
        <logger name="ru.tinkoff.piapi" level="INFO" additivity="false">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC_DEFAULT_FILE"/>
        </logger>
    </springProfile>

    <!-- Telegram Bot -->
    <logger name="com.example.investmentdatastreamservice.service.TgBotService" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_TELEGRAM_BOT"/>
    </logger>

    <!-- =========================================== -->
    <!-- ROOT LOGGER -->
    <!-- =========================================== -->
    <springProfile name="test">
        <root level="DEBUG">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC_TEST_FILE"/>
            <appender-ref ref="ASYNC_TEST_ERROR"/>
        </root>
    </springProfile>

    <springProfile name="prod">
        <root level="WARN">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC_PROD_FILE"/>
            <appender-ref ref="ASYNC_PROD_ERROR"/>
        </root>
    </springProfile>

    <springProfile name="!test,!prod">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC_DEFAULT_FILE"/>
            <appender-ref ref="ASYNC_DEFAULT_ERROR"/>
